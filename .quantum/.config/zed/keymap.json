[
  {
    "context": "Workspace",
    "bindings": {
      // "shift shift": "file_finder::Toggle"
    },
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      // "j k": "vim::NormalBefore"
    },
  },
  {
    "context": "Editor && vim_mode == helix_normal",
    "bindings": {
      "space": null,
      "space space": "file_finder::Toggle",
      "space f": "workspace::Open",
      "space d": "editor::GoToDefinition",
      "space D": "editor::GoToTypeDefinition",
      "space i": "editor::GoToImplementation",
      "space r": "editor::FindAllReferences",
      "space k": "editor::Hover",
      "space s": "project_symbols::Toggle",
      "space a": "editor::ToggleCodeActions",
      "space e": "diagnostics::Deploy",
      "space q": "pane::CloseActiveItem",
      "space tab": "tab_switcher::Toggle",
      "space c r": "debugger::Rerun",
      "space g": [
        "task::Spawn",
        {
          "task_name": "lazygit",
        },
      ],
      "space t": "workspace::NewTerminal",
    },
  },
  {
    "context": "Editor && mode == full && vim_mode == normal",
    "bindings": {
      "g space": null,
      "space enter": "editor::OpenExcerpts",
    },
  },
  {
    "context": "(CollabPanel && editing) > Editor",
    "bindings": {
      "space": null,
    },
  },
]
