// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {},
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {},
  },
  {
    "context": "Editor && vim_mode == helix_normal",
    "bindings": {
      "space": null,
      "space space": "file_finder::Toggle",
      "space f": "workspace::Open",

      "space tab": "tab_switcher::Toggle",
      "space g": [
        "task::Spawn",
        {
          "task_name": "lazygit",
        },
      ],
      "space t": "workspace::NewTerminal",
      "space d": null,
      "space d d": "debugger::Start",
      "space d b": "editor::ToggleBreakpoint",
      "space d c": "debugger::Continue",
      "space d s": "debugger::StepOver",
      "space d i": "debugger::StepInto",
      "space d o": "debugger::StepOut",
      "space d r": "debugger::Restart",
      "space d t": "debugger::Stop",
      "space d p": "debugger::Pause",
      "space d k": "debugger::ToggleExpandItem",
      "space m": null,
    },
  },
  {
    "context": "Editor && mode == full && vim_mode == normal",
    "bindings": {
      "g space": null,
      "space enter": "editor::OpenExcerpts",
    },
  },
  {
    "context": "(CollabPanel && editing) > Editor",
    "bindings": {
      "space": null,
    },
  },
]
